<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qadmni.activity.UserMyCartActivity">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:text="@string/str_your_cart"
            android:textColor="@color/primaryText2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="end"
            android:padding="4dp"
            android:text="@string/str_edit"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/horizontal1"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/titleLayout"
        android:background="@color/divider_colour" />

    <ListView
        android:id="@+id/myCartList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal1">

    </ListView>

    <LinearLayout
        android:id="@+id/AddMoreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myCartList"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtAddMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:paddingTop="4dp"
            android:text="@string/add_more"
            android:textColor="@color/accentText"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/checkOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="@color/btn_green_colour"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/btn_check_out"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>

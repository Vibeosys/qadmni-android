<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qadmni.activity.ConfirmAndPayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingBottom="2dp"
                android:paddingEnd="2dp"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:text="@string/str_your_cart"
                android:textColor="@color/primaryText2"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/divider_colour" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!--  <View
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:layout_marginBottom="3dp"
                  android:layout_marginTop="3dp"
                  android:background="@color/divider_colour" />-->

            <!--<TextView
                android:id="@+id/txtAddMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:paddingTop="2dp"
                android:text="@string/charge_details"
                android:textColor="@color/accentText"
                android:textSize="18sp" />
-->
            <!--<View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/divider_colour" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/charge_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/divider_colour" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:paddingBottom="2dp"
                android:paddingEnd="4dp"
                android:paddingStart="12dp"
                android:paddingTop="2dp"
                android:text="@string/str_total"
                android:textColor="@color/primaryText2"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:gravity="end"
                    android:padding="3dp"
                    android:text="@string/sar"
                    android:textColor="@color/primaryText2"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_total_sar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="end"
                    android:padding="3dp"
                    android:text="1485"
                    android:textColor="@color/primaryText2"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/divider_colour" />

        <LinearLayout
            android:id="@+id/payLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="@color/btn_green_colour"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/checkOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/str_btn_pay"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/usd"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_total_amount_usd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="3dp"
                    android:paddingTop="12dp"
                    android:text="1485"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

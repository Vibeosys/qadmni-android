<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Spinner
        android:id="@+id/spinnerId"
        style="@style/mySpinnerItemStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="0.5"
        android:padding="3dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="1.5"
        android:padding="3dp"
        android:text="@string/cart_one_item"
        android:textColor="@color/primaryText2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/idPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:padding="3dp"
        android:text="@string/cart_one_item_price"
        android:textColor="@color/primaryText2"
        android:textSize="18sp" />

    <Button
        android:id="@+id/deletebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@drawable/ic_delete_24_black"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="6dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_weight="0.1"
        android:background="@drawable/ic_done_black_24dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="6dp"
        android:visibility="invisible" />

</LinearLayout>